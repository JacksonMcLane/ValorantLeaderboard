<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_leaderboardItem_ranking"
        android:layout_width="129dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Rank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_leaderboardItem_username"
        android:layout_width="187dp"
        android:layout_height="69dp"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/textView_leaderboardItem_ranking"
        app:layout_constraintTop_toTopOf="@+id/textView_leaderboardItem_ranking" />
</androidx.constraintlayout.widget.ConstraintLayout>