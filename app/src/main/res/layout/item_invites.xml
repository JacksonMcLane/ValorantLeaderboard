<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_invitesItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <Button
        android:id="@+id/button_inviteItem_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="Accept"
        app:layout_constraintBottom_toBottomOf="@+id/textView_invitesItem_name"
        app:layout_constraintStart_toEndOf="@+id/textView_invitesItem_name"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_inviteItem_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="Decline"
        app:layout_constraintBottom_toBottomOf="@+id/button_inviteItem_accept"
        app:layout_constraintStart_toEndOf="@+id/button_inviteItem_accept" />
</androidx.constraintlayout.widget.ConstraintLayout>